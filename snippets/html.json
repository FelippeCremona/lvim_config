{
    "table_angular": {
        "prefix": "_table_angular",
        "body": [
            "<table class=\"table\">",
            "   <thead>",
            "       <th>Coluna</th>",
            "   </thead>",
            "   <tbody>",
            "       <tr *ngFor=\"let obj of ${1:lista}\">",
            "           <td>{{ obj }}</td>",
            "       </tr>",
            "   </tbody>",
            "</table>"
        ],
        "description": "Cria tabela com lista passada por parametro"
    },

    "form_angular": {
        "prefix": "_form_angular",
        "body": [
            "<form>",
            "   <div class=\"form-group\">",
            "       <label>${1:nomeLabel}:</label> <input type=\"text\" class=\"form-control\" [(ngModel)]=\"${2:variavel}\"/>",
            "   </div>",
            "   <br/>",
            "   <button type=\"button\" class=\"btn btn-primary\" title=\"${3:nomeBotao}\" (click)=\"${4:funcaoChamadora}()\">${3}</button>",
            "</form>"
        ],
        "description": "Cria exemplo de formulário"
    },

    "select_angular": {
        "prefix": "_select_angular",
        "body": [
            "<select class=\"form-control\" [(ngModel)]=\"${1:variavel}\" (ngModelChange)=\"${2:funcao}()\">",
            "   <option [ngValue]=\"null\">Selecione</option>",
            "   <option *ngFor=\"let obj of ${3:lista}\" [ngValue]=\"obj\">{{ obj.nome }}</option>",
            "</select>"
        ],
        "description": "Cria select com ngModel e ngModelChange"
    },

    "botao_angular": {
        "prefix": "_botao_angular",
        "body": [
            "<button type=\"button\" class=\"btn btn-primary\" title=\"${1:nomeBotao}\" (click)=\"${2:funcao}()\">${1}</button>"
        ],
        "description": "Cria botão com click chamando função"
    },

    "botao_angular_tabela": {
        "prefix": "_botao_angular_tabela",
        "body": [
            "<button type=\"button\" class=\"btn-xs btn-primario\" title=\"${1:botao}\" (click)=\"${2:funcao}()\"><i class=\"fa fa-pencil\"></i></button>"
        ],
        "description": "Cria botão com click chamando função"
    },
    "input_angular": {
        "prefix": "_input_angular",
        "body": [
            "<input type=\"text\" class=\"form-control\" [(ngModel)]=\"${1:variavel}\" (ngModelChange)=\"${2:funcao}()\"/>"
        ],
        "description": "Cria input com ngModel e ngModelChange"
    }
}
